<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:camel="http://camel.apache.org/schema/spring" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://camel.apache.org/schema/spring
           http://camel.apache.org/schema/spring/camel-spring.xsd">

	<bean id="boundary-event-route" class="com.boundary.sdk.BoundaryEventRoute">
		<property name="routeId" value="BOUNDARY-EVENT-ROUTE"/>
		<!-- TBD: Encryption of apiKey using Camel APIs -->
		<property name="orgId" value="3ehRi7uZeeaTN12dErF5XOnRXjC"/>
		<property name="apiKey" value="GN5HMCeu9trD5NYO5ZqYQrZe8aY"/>
		<property name="fromUri" value="direct:boundary-event"/>
	</bean>
	
	<bean id="syslog-route" class="com.boundary.sdk.SysLogRoute">
		<property name="routeId" value="SYSLOG-ROUTE"/>
		<property name="port" value="10514"/>
		<property name="toUri" value="direct:boundary-event"/>
	</bean>

	<camelContext xmlns="http://camel.apache.org/schema/spring">
		<routeBuilder ref="boundary-event-route"/>
		<routeBuilder ref="syslog-route"/>
	</camelContext>
</beans>
