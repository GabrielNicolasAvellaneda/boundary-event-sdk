
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
                   http://www.springframework.org/schema/beans
                   http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                   http://camel.apache.org/schema/spring
                   http://camel.apache.org/schema/spring/camel-spring.xsd">

	<camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
		<dataFormats>
			<json id="json-jackson" library="Jackson" unmarshalTypeName="com.boundary.sdk.event.notification.Notification"/>
		</dataFormats>
				
		<route id="json-to-notification">
			<from uri="direct:json-in"/>
			<unmarshal ref="json-jackson"/>
			<log loggingLevel="INFO" message="${body}"/>
			<to uri="mock:notification-out"/>
		</route>
	</camelContext>
</beans>
