<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.boundary</groupId>
	<artifactId>boundary-event-sdk</artifactId>
	<packaging>jar</packaging>
	<version>0.00.03</version>

	<name>boundary-event-sdk</name>
	<url>https://github.com/boundary/boundary-sdk</url>
	<properties>
		<!-- Set the project encoding -->
    		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<!-- Properties for all of the java packages -->
		<camel-version>2.12.3</camel-version>
		<spring-version>3.2.5.RELEASE</spring-version>
		<activemq-version>5.9.0</activemq-version>
		<snmp4j-version>2.2.5</snmp4j-version>
		<snmp4j-smi-version>1.1.3</snmp4j-smi-version>
		<spring-security-version>3.1.4.RELEASE</spring-security-version>
                <commons-cli-version>1.2</commons-cli-version>
		<commons-io-version>1.3.2</commons-io-version>
		<commons-lang3-version>3.3.2</commons-lang3-version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.8</version>
				<executions>
					<execution>
						<id>copy</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/lib</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.camel</groupId>
				<version>${camel-version}</version>
				<artifactId>camel-maven-plugin</artifactId>
				<configuration>
					<applicationContextUri>META-INF/event-application.xml</applicationContextUri>
				</configuration>
			</plugin>
		</plugins>
	</build>
