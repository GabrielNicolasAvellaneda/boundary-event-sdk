	<developers>
		<developer>
			<id>davidg</id>
			<name>David Gwartney</name>
			<email>davidg@boundary.com</email>
			<url>https://www.linkedin.com/in/davidgwartney</url>
			<organization>Boundary,Inc.</organization>
			<organizationUrl>http://www.boundary.com</organizationUrl>
			<roles>
				<role>architect</role>
				<role>developer</role>
			</roles>
			<timezone>-8</timezone>
			<properties>
				<picUrl>https://media.licdn.com/media/p/5/005/03e/1c1/19f5f33.jpg</picUrl>
			</properties>
		</developer>
	</developers>
	<properties>
		<!-- Set the project encoding -->
    		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<!-- Properties for all of the java packages -->
		<activemq-version>5.9.0</activemq-version>
		<camel-version>2.12.3</camel-version>
                <commons-cli-version>1.2</commons-cli-version>
		<commons-io-version>1.3.2</commons-io-version>
		<commons-lang3-version>3.3.2</commons-lang3-version>
		<junit-version>4.8.1</junit-version>
		<snmp4j-version>2.2.5</snmp4j-version>
		<snmp4j-smi-version>1.1.3</snmp4j-smi-version>
		<spring-version>3.2.5.RELEASE</spring-version>
		<spring-security-version>3.1.4.RELEASE</spring-security-version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.8</version>
				<executions>
					<execution>
						<id>copy</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/lib</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.camel</groupId>
				<version>${camel-version}</version>
				<artifactId>camel-maven-plugin</artifactId>
				<configuration>
					<applicationContextUri>META-INF/event-application.xml</applicationContextUri>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-project-info-reports-plugin</artifactId>
				<version>2.7</version>
			</plugin>
		</plugins>
	</build>
